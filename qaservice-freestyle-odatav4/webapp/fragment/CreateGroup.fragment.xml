<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">

    <Dialog
        id="createGroupDialog"
        title="Create Group">
        
        <content>
            <FlexBox direction="Column" alignItems="Center">
                <FlexBox class="sapUiTinyMarginTop sapUiSmallMarginBottom" justifyContent="Center" alignItems="Center">
                    <Label text="Topic:" />
                    <Input class="sapUiTinyMarginBegin" value="{app>/selectedTopic/name}" enabled="false" />
                </FlexBox>

                <FlexBox class="sapUiTinyMarginTop sapUiTinyMarginBottom" justifyContent="Center" alignItems="Center">
                    <Label text="Name:" />
                    <Input class="sapUiTinyMarginBegin" value="{app>/newGroup/name}" />
                </FlexBox>
            </FlexBox>
        </content>

        <beginButton>
            <Button type="Emphasized" text="Create" press=".onSubmitGroupDialog" />
        </beginButton>

        <endButton>
            <Button text="Cancel" press=".onCloseGroupDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>