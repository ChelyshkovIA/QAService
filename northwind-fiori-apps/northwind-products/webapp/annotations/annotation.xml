<edmx:Edmx xmlns:edmx="http://docs.oasis-open.org/odata/ns/edmx" Version="4.0">
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/Common.xml">
        <edmx:Include Namespace="com.sap.vocabularies.Common.v1" Alias="Common"/>
    </edmx:Reference>
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/UI.xml">
        <edmx:Include Namespace="com.sap.vocabularies.UI.v1" Alias="UI"/>
    </edmx:Reference>
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/Communication.xml">
        <edmx:Include Namespace="com.sap.vocabularies.Communication.v1" Alias="Communication"/>
    </edmx:Reference>
    <edmx:Reference Uri="/V2/Northwind/Northwind.svc/$metadata">
        <edmx:Include Namespace="NorthwindModel"/>
        <edmx:Include Namespace="ODataWeb.Northwind.Model"/>
    </edmx:Reference>
    <edmx:DataServices>
        <Schema xmlns="http://docs.oasis-open.org/odata/ns/edm" Namespace="local">
            <Annotations Target="NorthwindModel.Product">
                <Annotation Term="UI.SelectionFields" >
                    <Collection>
                        <PropertyPath>ProductName</PropertyPath>
                    </Collection>
                </Annotation>

                <Annotation Term="UI.LineItem">
                    <Collection>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Label" String="ID"/>
                            <PropertyValue Property="Value" Path="ProductID"/>
                        </Record>

                        <Record Type="UI.DataField">
                            <PropertyValue Property="Label" String="Product Name"/>
                            <PropertyValue Property="Value" Path="ProductName"/>
                        </Record>

                        <Record Type="UI.DataField">
                            <PropertyValue Property="Label" String="Unit Price"/>
                            <PropertyValue Property="Value" Path="UnitPrice"/>
                        </Record>

                        <Record Type="UI.DataField">
                            <PropertyValue Property="Label" String="Supplier City"/>
                            <PropertyValue Property="Value" Path="Supplier/City"/>
                        </Record>
                    </Collection>
                </Annotation>

                <Annotation Term="UI.HeaderInfo" >
                    <Record Type="UI.HeaderInfoType">
                        <PropertyValue Property="Title">
                            <Record Type="UI.DataField">
                                <PropertyValue Property="Value" Path="ProductName"/>
                            </Record>
                        </PropertyValue>
                    </Record>
                </Annotation>

                <Annotation Term="UI.HeaderFacets" >
                    <Collection>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="Product Info"/>
                            <PropertyValue Property="Target" AnnotationPath="@UI.FieldGroup#ProductInfoFieldGroup"/>
                        </Record>

                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="Product Category Info"/>
                            <PropertyValue Property="Target" AnnotationPath="Category/@UI.FieldGroup#CategoryFieldGroup"/>
                        </Record>

                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="Supplier Info"/>
                            <PropertyValue Property="Target" AnnotationPath="Supplier/@UI.FieldGroup#SupplierFieldGroup"/>
                        </Record>
                    </Collection>
                </Annotation>

                <Annotation Term="UI.Facets" >
                    <Collection>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="Orders Table"/>
                            <PropertyValue Property="Target" AnnotationPath="Order_Details/@UI.LineItem#OrdersLineItem"/>
                        </Record>
                    </Collection>
                </Annotation>

                <Annotation Term="UI.FieldGroup" Qualifier="ProductInfoFieldGroup">
                    <Record Type="UI.FieldGroupType">
                        <PropertyValue Property="Data">
                            <Collection>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Product ID"/>
                                    <PropertyValue Property="Value" Path="ProductID"/>
                                </Record>

                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Name"/>
                                    <PropertyValue Property="Value" Path="ProductName"/>
                                </Record>
                                
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Units in Stock"/>
                                    <PropertyValue Property="Value" Path="UnitsInStock"/>
                                </Record>

                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Unit Price"/>
                                    <PropertyValue Property="Value" Path="UnitPrice"/>
                                </Record>

                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Quanitiy per Unit"/>
                                    <PropertyValue Property="Value" Path="QuantityPerUnit"/>
                                </Record>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>
            </Annotations>

            <Annotations Target="NorthwindModel.Category">
                <Annotation Term="UI.FieldGroup" Qualifier="CategoryFieldGroup">
                    <Record Type="UI.FieldGroupType">
                        <PropertyValue Property="Data">
                            <Collection>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Category ID"/>
                                    <PropertyValue Property="Value" Path="CategoryID"/>
                                </Record>

                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Name"/>
                                    <PropertyValue Property="Value" Path="CategoryName"/>
                                </Record>

                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Description"/>
                                    <PropertyValue Property="Value" Path="Description"/>
                                </Record>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>
            </Annotations>

            <Annotations Target="NorthwindModel.Supplier">
                <Annotation Term="UI.FieldGroup" Qualifier="SupplierFieldGroup">
                    <Record Type="UI.FieldGroupType">
                        <PropertyValue Property="Data">
                            <Collection>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Supplier ID"/>
                                    <PropertyValue Property="Value" Path="SupplierID"/>
                                </Record>

                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="City"/>
                                    <PropertyValue Property="Value" Path="City"/>
                                </Record>

                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Region"/>
                                    <PropertyValue Property="Value" Path="Region"/>
                                </Record>

                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Contact Name"/>
                                    <PropertyValue Property="Value" Path="ContactName"/>
                                </Record>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>
            </Annotations>

            <Annotations Target="NorthwindModel.Order_Detail">
                <Annotation Term="UI.LineItem" Qualifier="OrdersLineItem">
                    <Collection>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Label" String="Order ID"/>
                            <PropertyValue Property="Value" Path="OrderID"/>
                        </Record>

                        <Record Type="UI.DataField">
                            <PropertyValue Property="Label" String="Product ID"/>
                            <PropertyValue Property="Value" Path="ProductID"/>
                        </Record>

                        <Record Type="UI.DataField">
                            <PropertyValue Property="Label" String="Customer ID"/>
                            <PropertyValue Property="Value" Path="Order/CustomerID"/>
                        </Record>

                        <Record Type="UI.DataField">
                            <PropertyValue Property="Label" String="Customer Contact Name"/>
                            <PropertyValue Property="Value" Path="Order/Customer/ContactName"/>
                        </Record>

                        <Record Type="UI.DataField">
                            <PropertyValue Property="Label" String="Order Date"/>
                            <PropertyValue Property="Value" Path="Order/OrderDate"/>
                        </Record>
                        
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Label" String="Discount"/>
                            <PropertyValue Property="Value" Path="Discount"/>
                        </Record>
                    </Collection>
                </Annotation>
            </Annotations>
        </Schema>
    </edmx:DataServices>
</edmx:Edmx>