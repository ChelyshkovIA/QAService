<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data">
    <viz:VizFrame 
        id="idVizFrame"
        vizProperties="{
            interaction: {
                selectability: {
                    mode: 'EXCLUSIVE'
                }
            },
            title: {
                visible: false
            },
            plotArea: {
                dataLabel: {
                    visible: true
                }
            }
        }"
        vizType='donut'
        selectData=".onChartGroupSelect">
        <viz:dataset>
            <viz.data:FlattenedDataset data="{appModel>/groupsTable/data/categories}">
                <viz.data:dimensions>
                    <viz.data:DimensionDefinition name="Group Name"
                        value="{name}" />
                    <viz.data:DimensionDefinition name="Group ID"
                        value="{ID}" />    
                </viz.data:dimensions>
                <viz.data:measures>
                    <viz.data:MeasureDefinition name="Questions"
                        value="{categories/length}" />
                </viz.data:measures>
            </viz.data:FlattenedDataset>
        </viz:dataset>

        <viz:feeds>
            <viz.feeds:FeedItem uid="size" type="Measure"
                values="Questions" />
            <viz.feeds:FeedItem uid="color" type="Dimension"
                values="Group Name" />
            <viz.feeds:FeedItem uid="color" type="Dimension"
                values="Group ID" />
        </viz:feeds>
    </viz:VizFrame>
</core:FragmentDefinition>