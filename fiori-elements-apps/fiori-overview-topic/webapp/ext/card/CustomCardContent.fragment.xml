<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    
    <Table
        items="{mainModel>/Questions}"
        growing="true"
        growingThreshold="2">
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <HBox justifyContent="SpaceBetween" width="100%">
                        <Title text="Questions" level="H2" />
                        <Link text="Questions Lis App" press=".onQuestionsListLinkPress" />
                    </HBox>
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="ID" />
            </Column>
            <Column>
                <Text text="Text" />
            </Column>
        </columns>
        <items>
            <ColumnListItem
                type="Navigation"
                press=".onItemPress">
                <cells>
                    <Text text="{mainModel>ID}" />
                    <Text text="{mainModel>text}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>