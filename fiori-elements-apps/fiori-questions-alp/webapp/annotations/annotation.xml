<edmx:Edmx xmlns:edmx="http://docs.oasis-open.org/odata/ns/edmx" Version="4.0">
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/Common.xml">
        <edmx:Include Namespace="com.sap.vocabularies.Common.v1" Alias="Common"/>
    </edmx:Reference>
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/UI.xml">
        <edmx:Include Namespace="com.sap.vocabularies.UI.v1" Alias="UI"/>
    </edmx:Reference>
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/Communication.xml">
        <edmx:Include Namespace="com.sap.vocabularies.Communication.v1" Alias="Communication"/>
    </edmx:Reference>
    <edmx:Reference Uri="/here/goes/your/serviceurl/$metadata">
        <edmx:Include Namespace="QAService"/>
    </edmx:Reference>
    <edmx:DataServices>
        <Schema xmlns="http://docs.oasis-open.org/odata/ns/edm" Namespace="local">
            <Annotations Target="QAService.Questions">
                <Annotation Term="UI.SelectionFields" >
                    <Collection>
                        <PropertyPath>difficulty_ID</PropertyPath>
                    </Collection>
                </Annotation>

                <Annotation Term="UI.LineItem">
                    <Collection>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Label" String="ID"/>
                            <PropertyValue Property="Value" Path="ID"/>
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Label" String="Text"/>
                            <PropertyValue Property="Value" Path="text"/>
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Label" String="Topic"/>
                            <PropertyValue Property="Value" Path="topic/name"/>
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Label" String="Difficulty"/>
                            <PropertyValue Property="Value" Path="difficulty/name"/>
                        </Record>
                    </Collection>
                </Annotation>

                <Annotation Term="UI.PresentationVariant" Qualifier="ContentAreaPresentationVariant">
                    <Record Type="UI.PresentationVariantType">
                        <PropertyValue Property="Text" String="Default"/>
                        <PropertyValue Property="SortOrder">
                            <Collection>
                                <Record Type="Common.SortOrderType">
                                    <PropertyValue Property="Property" PropertyPath="difficulty/numeric"/>
                                    <PropertyValue Property="Descending" Bool="true"/>
                                </Record>
                            </Collection>
                        </PropertyValue>
                        
                        <PropertyValue Property="IncludeGrandTotal" Bool="false"/>
                        <PropertyValue Property="InitialExpansionLevel" Int="1"/>
                        <PropertyValue Property="Visualizations">
                            <Collection>
                                <AnnotationPath>@UI.LineItem</AnnotationPath>
                                <AnnotationPath>@UI.Chart#InteractiveUIChart</AnnotationPath>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>

                <Annotation Term="UI.Chart" Qualifier="InteractiveUIChart">
                    <Record Type="UI.ChartDefinitionType">
                        <PropertyValue Property="ChartType" EnumMember="UI.ChartType/Column"/>
                        <PropertyValue Property="Title" String="Interactive Chart Title"/>
                        <PropertyValue Property="Description" String="Interactive Chart Description"/>
                        <PropertyValue Property="Measures">
                            <Collection>
                                <PropertyPath>difficulty/numeric</PropertyPath>
                            </Collection>
                        </PropertyValue>
                        <PropertyValue Property="Dimensions">
                            <Collection>
                                <PropertyPath>difficulty_ID</PropertyPath>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>
            </Annotations>

            <Annotations Target="QAService.Questions/difficulty_ID">
                <Annotation Term="Common.ValueList" Qualifier="ValueListForVisualFilter">
                    <Record Type="Common.ValueListType">
                        <PropertyValue Property="CollectionPath" String="Difficulties"/>
                        <PropertyValue Property="PresentationVariantQualifier" String="DifficultyPresentationVarian"/>
                        <PropertyValue Property="Parameters">
                            <Collection>
                                <Record Type="Common.ValueListParameterInOut">
                                    <PropertyValue Property="LocalDataProperty" PropertyPath="difficulty_ID"/>
                                    <PropertyValue Property="ValueListProperty" String="ID"/>
                                </Record>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>
            </Annotations>

            <Annotations Target="QAService.Difficulties">
                <Annotation Term="UI.PresentationVariant" Qualifier="DifficultyPresentationVarian">
                    <Record Type="UI.PresentationVariantType">
                        <PropertyValue Property="Visualizations">
                            <Collection>
                                <AnnotationPath>@UI.Chart#DifficultyChart</AnnotationPath>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>

                <Annotation Term="UI.Chart" Qualifier="DifficultyChart">
                    <Record Type="UI.ChartDefinitionType">
                        <PropertyValue Property="ChartType" EnumMember="UI.ChartType/Line"/>
                        <PropertyValue Property="Title" String="Chart Title"/>
                        <PropertyValue Property="Description" String="Chart Description"/>
                        <PropertyValue Property="Measures">
                            <Collection>
                                <PropertyPath>numeric</PropertyPath>
                            </Collection>
                        </PropertyValue>
                        <PropertyValue Property="Dimensions">
                            <Collection>
                                <PropertyPath>ID</PropertyPath>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>
            </Annotations>
        </Schema>
    </edmx:DataServices>
</edmx:Edmx>