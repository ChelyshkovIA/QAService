<edmx:Edmx xmlns:edmx="http://docs.oasis-open.org/odata/ns/edmx" Version="4.0">
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/Common.xml">
        <edmx:Include Namespace="com.sap.vocabularies.Common.v1" Alias="Common"/>
    </edmx:Reference>
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/UI.xml">
        <edmx:Include Namespace="com.sap.vocabularies.UI.v1" Alias="UI"/>
    </edmx:Reference>
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/Communication.xml">
        <edmx:Include Namespace="com.sap.vocabularies.Communication.v1" Alias="Communication"/>
    </edmx:Reference>
    <edmx:Reference Uri="/odatav2/$metadata">
        <edmx:Include Namespace="QAService"/>
    </edmx:Reference>
    <edmx:DataServices>
        <Schema xmlns="http://docs.oasis-open.org/odata/ns/edm" Namespace="local">
            <!-- Topics Name Annotations  -->
            <Annotations Target="QAService.Topics/name">
                <!-- Label for the Topic Name -->
                <Annotation Term="Common.Label" String="Topic name"/>

                <!-- Value list for the Topic Names -->
                <Annotation Term="Common.ValueList">
                    <Record Type="Common.ValueListType">
                        <PropertyValue Property="CollectionPath" String="Topics"/>
                        <PropertyValue Property="Parameters">
                            <Collection>
                                <Record Type="Common.ValueListParameterInOut">
                                    <PropertyValue Property="LocalDataProperty" PropertyPath="name"/>
                                    <PropertyValue Property="ValueListProperty" String="name"/>
                                </Record>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>

                <!-- Enable Value List for the Topic Names -->
                <Annotation Term="Common.ValueListWithFixedValues"/>
            </Annotations>

            <!-- Groups Names Annotations  -->
            <Annotations Target="QAService.Groups/name">
                <!-- Label for the Group Name -->
                <Annotation Term="Common.Label" String="Group name"/>

                <!-- Value List for the Group Names -->
                <Annotation Term="Common.ValueList">
                    <Record Type="Common.ValueListType">
                        <PropertyValue Property="CollectionPath" String="Groups"/>
                        <PropertyValue Property="Parameters">
                            <Collection>
                                <Record Type="Common.ValueListParameterInOut">
                                    <PropertyValue Property="LocalDataProperty" PropertyPath="name"/>
                                    <PropertyValue Property="ValueListProperty" String="name"/>
                                </Record>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>

                <!-- Enable Value List for the Group Names -->
                <Annotation Term="Common.ValueListWithFixedValues"/>
            </Annotations>

            <!-- Questions Entity Type Annotations -->
            <Annotations Target="QAService.Questions">

                <!-- Questions Table Annotation -->
                <Annotation Term="UI.LineItem" >
                    <Collection>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="difficulty/numeric" />
                            <PropertyValue Property="Label" String="Numeric"/>
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="ID" />
                            <PropertyValue Property="Label" String="ID"/>
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="text" />
                            <PropertyValue Property="Label" String="Question"/>
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="progress/name" />
                            <PropertyValue Property="Label" String="Status"/>
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="difficulty/name" />
                            <PropertyValue Property="Label" String="Difficulty"/>
                        </Record>
                        <Record Type="UI.DataFieldForAnnotation">
                            <PropertyValue Property="Target" AnnotationPath="difficulty/@UI.Chart#QuestionDifficultyChart"/>
                            <PropertyValue Property="Label" String="Difficulty"/>
                        </Record>
                    </Collection>
                </Annotation>

                <!-- Questions Filters Annotation -->
                <Annotation Term="UI.SelectionFields" >
                    <Collection>
                        <PropertyPath>ID</PropertyPath>
                        <PropertyPath>topic/name</PropertyPath>
                        <PropertyPath>group/name</PropertyPath>
                    </Collection>
                </Annotation>

                <!-- Header Info of Questions App Object Page -->
                <Annotation Term="UI.HeaderInfo" >
                    <Record Type="UI.HeaderInfoType">
                        <PropertyValue Property="Title">
                            <Record Type="UI.DataField">
                                <PropertyValue Property="Value" Path="topic/name" />
                            </Record>
                        </PropertyValue>
                    </Record>
                </Annotation>

                <!-- Question Object Page Header Facets -->
                <Annotation Term="UI.HeaderFacets" >
                    <Collection>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Target" AnnotationPath="@UI.DataPoint#QuestionDifficultyRatingDataPoint"/>
                        </Record>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Target" AnnotationPath="@UI.DataPoint#QuestionDifficultyProgressDataPoint"/>
                        </Record>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Target" AnnotationPath="@UI.DataPoint#QuestionProgressStatusDataPoint"/>
                        </Record>
                    </Collection>
                </Annotation>

                <!-- Question Object Page Section Facets -->
                <Annotation Term="UI.Facets" >
                    <Collection>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="Question Info"/>
                            <PropertyValue Property="Target" AnnotationPath="@UI.FieldGroup#QuestionFieldGroup"/>
                        </Record>
                    </Collection>
                </Annotation>

                <!-- Question Rating Data Point -->
                <Annotation Term="UI.DataPoint" Qualifier="QuestionDifficultyRatingDataPoint">
                    <Record Type="UI.DataPointType">
                        <PropertyValue Property="Title" String="Question Difficulty Rating"/>
                        <PropertyValue Property="Value" Path="difficulty/numeric" />
                        <PropertyValue Property="TargetValue" Int="3" />
                        <PropertyValue Property="Visualization" EnumMember="UI.VisualizationType/Rating"/>
                    </Record>
                </Annotation>

                <!-- Question Difficulty Progress Data Point -->
                <Annotation Term="UI.DataPoint" Qualifier="QuestionDifficultyProgressDataPoint">
                    <Record Type="UI.DataPointType">
                        <PropertyValue Property="Title" String="Question Difficulty Progress"/>
                        <PropertyValue Property="Value" Path="difficulty/numeric"/>
                        <PropertyValue Property="TargetValue" Int="3"/>
                        
                        <PropertyValue Property="Visualization" EnumMember="UI.VisualizationType/Progress"/>
                    </Record>
                </Annotation>

                <!-- Question Progress Status Data Point -->
                <Annotation Term="UI.DataPoint" Qualifier="QuestionProgressStatusDataPoint">
                    <Record Type="UI.DataPointType">
                        <PropertyValue Property="Title" String="Question Progress Status"/>
                        <PropertyValue Property="Value" Path="progress/name"/>
                    </Record>
                </Annotation>

                <!-- Question Info Field Group -->
                <Annotation Term="UI.FieldGroup" Qualifier="QuestionFieldGroup">
                    <Record Type="UI.FieldGroupType">
                        <PropertyValue Property="Data">
                            <Collection>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Question Text"/>
                                    <PropertyValue Property="Value" Path="text"/>
                                </Record>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Topic Name"/>
                                    <PropertyValue Property="Value" Path="topic/name"/>
                                </Record>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Group Name"/>
                                    <PropertyValue Property="Value" Path="group/name"/>
                                </Record>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Difficulty"/>
                                    <PropertyValue Property="Value" Path="difficulty/name"/>
                                </Record>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Label" String="Progress Status"/>
                                    <PropertyValue Property="Value" Path="progress/name"/>
                                </Record>
                                <Record Type="UI.DataField">
                                    <Annotation Term="Common.Label" String="Answer"/>
                                    <PropertyValue Property="Value" Path="answer"/>
                                </Record>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>
            </Annotations>

            <!-- Difficutlties Entity Type Annotations -->
            <Annotations Target="QAService.Difficulties">
                <!-- Data Point for the Difficulty numeric property -->
                <Annotation Term="UI.DataPoint" Qualifier="QuestionDifficultyDataPoint">
                    <Record Type="UI.DataPointType">
                        <PropertyValue Property="Value" Path="numeric" />
                        <PropertyValue Property="CriticalityCalculation">
                            <Record Type="UI.CriticalityCalculationType">
                                <PropertyValue Property="ImprovementDirection" EnumMember="UI.ImprovementDirectionType/Minimize" />
                                <PropertyValue Property="DeviationRangeLowValue" Int="2" />
                            </Record>
                        </PropertyValue>
                    </Record>
                </Annotation>

                <!-- Chart for the Difficulty numeric property -->
                <Annotation Term="UI.Chart" Qualifier="QuestionDifficultyChart">
                    <Record Type="UI.ChartDefinitionType">
                        <PropertyValue Property="ChartType" EnumMember="UI.ChartType/Bullet"/>
                        <PropertyValue Property="Measures">
                            <Collection>
                                <PropertyPath>numeric</PropertyPath>
                            </Collection>
                        </PropertyValue>
                        <PropertyValue Property="MeasureAttributes">
                            <Collection>
                                <Record Type="UI.ChartMeasureAttributeType">
                                    <PropertyValue Property="DataPoint" AnnotationPath="@UI.DataPoint#QuestionDifficultyDataPoint"/>
                                </Record>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>
            </Annotations>
        </Schema>
    </edmx:DataServices>
</edmx:Edmx>