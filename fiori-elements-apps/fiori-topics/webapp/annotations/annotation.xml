<edmx:Edmx xmlns:edmx="http://docs.oasis-open.org/odata/ns/edmx" Version="4.0">
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/UI.xml">
        <edmx:Include Namespace="com.sap.vocabularies.UI.v1" Alias="UI"/>
    </edmx:Reference>
    <edmx:Reference Uri="/odatav2/$metadata">
        <edmx:Include Namespace="QAService"/>
    </edmx:Reference>
    <edmx:DataServices>
        <Schema xmlns="http://docs.oasis-open.org/odata/ns/edm" Namespace="local">
            <!-- Difficulty Criticality Data Point -->
            <Annotations Target="QAService.Difficulties">
                <Annotation Term="UI.DataPoint" Qualifier="DifficyltyDataPointBulletChart">
                    <Record Type="UI.DataPointType">
                        <PropertyValue Property="Value" Path="numeric"/>
                        <PropertyValue Property="Visualization" EnumMember="UI.VisualizationType/Progress"/>
                        <PropertyValue Property="TargetValue" Decimal="3"/>
                        <PropertyValue Property="Criticality" Path="numeric"/>
                    </Record>
                </Annotation>
            </Annotations>

            <!-- Questions Entity Type Annotations  -->
            <Annotations Target="QAService.Questions">
                <Annotation Term="UI.LineItem" Qualifier="QuestionsLineItem">
                    <Collection>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="text" />
                            <PropertyValue Property="Label" String="{@i18n>text}"/>
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="progress/name" />
                            <PropertyValue Property="Label" String="{@i18n>progressStatus}"/>
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="difficulty/numeric" />
                            <PropertyValue Property="Label" String="{@i18n>numeric}"/>
                        </Record>
                        <Record Type="UI.DataFieldForAnnotation">
                            <PropertyValue Property="Label" String="{@i18n>difficultyChart}"/>
                            <PropertyValue Property="Target" AnnotationPath="difficulty/@UI.DataPoint#DifficyltyDataPointBulletChart"/>
                        </Record>
                    </Collection>
                </Annotation>
            </Annotations>

            <!-- Groups Entity Type Annotations  -->
            <Annotations Target="QAService.Groups">
                <Annotation Term="UI.LineItem" Qualifier="GroupsLineItem">
                    <Collection>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="ID"/>
                            <PropertyValue Property="Label" String="{@i18n>id}"/>
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="name"/>
                            <PropertyValue Property="Label" String="{@i18n>name}"/>
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="topic/name"/>
                            <PropertyValue Property="Label" String="{@i18n>topicName}"/>
                        </Record>
                    </Collection>
                </Annotation>
            </Annotations>

            <!-- Topics Entity Type Annotations  -->
            <Annotations Target="QAService.Topics">
                <!-- List Report -->
                <Annotation Term="UI.LineItem">
                    <Collection>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="ID"/>
                            <PropertyValue Property="Label" String="{@i18n>topicId}"/>
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="name"/>
                            <PropertyValue Property="Label" String="{@i18n>name}"/>
                        </Record>
                    </Collection>
                </Annotation>
                <Annotation Term="UI.SelectionFields">
                    <Collection>
                        <PropertyPath>name</PropertyPath>
                        <PropertyPath>groups/name</PropertyPath>
                        <PropertyPath>questions/text</PropertyPath>
                    </Collection>
                </Annotation>

                <!-- Object Page -->
                <Annotation Term="UI.HeaderInfo" >
                    <Record>
                        <PropertyValue Property="Title">
                            <Record Type="UI.DataField">
                                <PropertyValue Property="Value" Path="name" />
                            </Record>
                        </PropertyValue>

                        <PropertyValue Property="Description">
                            <Record Type="UI.DataField">
                                <PropertyValue Property="Value" Path="ID" />
                            </Record>
                        </PropertyValue>
                    </Record>
                </Annotation>

                <!-- Header Facets -->
                <Annotation Term="UI.HeaderFacets" >
                    <Collection>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="{@i18n>creationInfo}" />
                            <PropertyValue Property="Target" AnnotationPath="@UI.FieldGroup#TopicCreationFieldGroup" />
                        </Record>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="{@i18n>modificationInfo}" />
                            <PropertyValue Property="Target" AnnotationPath="@UI.FieldGroup#TopicModificationFieldGroup" />
                        </Record>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="{@i18n>usefulLinks}" />
                            <PropertyValue Property="Target" AnnotationPath="@UI.FieldGroup#TopicLinksListFieldGroup" />
                        </Record>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="{@i18n>dataPoint}"/>
                            <PropertyValue Property="Target" AnnotationPath="@UI.DataPoint#TopicRatingDataPoint"/>
                        </Record>
                    </Collection>
                </Annotation>

                <!-- Section Facets  -->
                <Annotation Term="UI.Facets" >
                    <Collection>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="{@i18n>creationInfo}" />
                            <PropertyValue Property="Target" AnnotationPath="@UI.FieldGroup#TopicCreationFieldGroup" />
                        </Record>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="{@i18n>modificationInfo}" />
                            <PropertyValue Property="Target" AnnotationPath="@UI.FieldGroup#TopicModificationFieldGroup" />
                        </Record>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="{@i18n>fullInfo}"/>
                            <PropertyValue Property="Target" AnnotationPath="@UI.FieldGroup#TopicModificationCreationFieldGroup"/>
                        </Record>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="{@i18n>topicQuestions}"/>
                            <PropertyValue Property="Target" AnnotationPath="questions/@UI.LineItem#QuestionsLineItem"/>
                        </Record>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="{@i18n>topicGroups}"/>
                            <PropertyValue Property="Target" AnnotationPath="groups/@UI.LineItem#GroupsLineItem"/>
                        </Record>
                    </Collection>
                </Annotation>

                <!-- Creation Section  -->
                <Annotation Term="UI.FieldGroup" Qualifier="TopicCreationFieldGroup">
                    <Record>
                        <PropertyValue Property="Data">
                            <Collection>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Value" Path="createdAt" />
                                </Record>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Value" Path="createdBy" />
                                </Record>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>

                <!-- Modification Section  -->
                <Annotation Term="UI.FieldGroup" Qualifier="TopicModificationFieldGroup">
                    <Record>
                        <PropertyValue Property="Data">
                            <Collection>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Value" Path="modifiedAt" />
                                </Record>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Value" Path="modifiedBy" />
                                </Record>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>

                <!-- Full Creation and Modification Section  -->
                <Annotation Term="UI.FieldGroup" Qualifier="TopicModificationCreationFieldGroup">
                    <Record Type="UI.FieldGroupType">
                        <PropertyValue Property="Data">
                            <Collection>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Value" Path="modifiedAt"/>
                                </Record>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Value" Path="modifiedBy"/>
                                </Record>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Value" Path="createdAt"/>
                                </Record>
                                <Record Type="UI.DataField">
                                    <PropertyValue Property="Value" Path="createdBy"/>
                                </Record>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>

                <!-- Field Group With URLs -->
                <Annotation Term="UI.FieldGroup" Qualifier="TopicLinksListFieldGroup">
                    <Record Type="UI.FieldGroupType">
                        <PropertyValue Property="Data">
                            <Collection>
                                <!-- Absolute URL Path -->
                                <Record Type="UI.DataFieldWithUrl">
                                    <PropertyValue Property="Url" String="https://www.google.com"/>
                                    <PropertyValue Property="Value" Path="name" />
                                    <PropertyValue Property="Label" String="{@i18n>topicDocsAbsolutePath}"/>
                                </Record>

                                <!-- Path Reference to a property -->
                                <Record Type="UI.DataFieldWithUrl">
                                    <PropertyValue Property="Url" Path="name" />
                                    <PropertyValue Property="Value" Path="ID" />
                                    <PropertyValue Property="Label" String="{@i18n>topicsDocsPropertyPath}"/>
                                </Record>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>

                <!-- Topic Rating Data Point -->
                <Annotation Term="UI.DataPoint" Qualifier="TopicRatingDataPoint">
                    <Record Type="UI.DataPointType">
                        <PropertyValue Property="Title" String="{@i18n>topicRatingDataPoint}"/>
                        <PropertyValue Property="Value" Int="3" />
                        <PropertyValue Property="TargetValue" Int="5" />
                        <PropertyValue Property="Visualization" EnumMember="UI.VisualizationType/Rating" />
                    </Record>
                </Annotation>
            </Annotations>
        </Schema>
    </edmx:DataServices>
</edmx:Edmx>