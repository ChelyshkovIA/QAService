<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    xmlns="sap.suite.ui.microchart"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data">

    <m:FlexBox direction="Column">
        <m:Title text="{name} Groups" />

        <viz:VizFrame 
            id="idVizFrame"
            vizProperties="{
                interaction: {
                    selectability: {
                        mode: 'EXCLUSIVE'
                    }
                },
                title: {
                    visible: false
                },
                plotArea: {
                    dataLabel: {
                        visible: true
                    }
                }
            }"
            height="150px"
            width="320px"
            vizType='donut'>
            <viz:dataset>
                <viz.data:FlattenedDataset data="{groups}">
                    <viz.data:dimensions>
                        <viz.data:DimensionDefinition name="Group Name"
                            value="{name}" />
                        <viz.data:DimensionDefinition name="Group ID"
                            value="{ID}" />    
                    </viz.data:dimensions>
                    <viz.data:measures>
                        <viz.data:MeasureDefinition name="Questions"
                            value="1" />
                    </viz.data:measures>
                </viz.data:FlattenedDataset>
            </viz:dataset>

            <viz:feeds>
                <viz.feeds:FeedItem uid="size" type="Measure"
                    values="Questions" />
                <viz.feeds:FeedItem uid="color" type="Dimension"
                    values="Group Name" />
                <viz.feeds:FeedItem uid="color" type="Dimension"
                    values="Group ID" />
            </viz:feeds>
        </viz:VizFrame>
    </m:FlexBox>
</core:FragmentDefinition>