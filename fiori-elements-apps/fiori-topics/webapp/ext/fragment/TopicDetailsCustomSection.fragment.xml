<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    xmlns="sap.suite.ui.microchart"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data">

    <m:FlexBox direction="Column">
        <m:Title text="{name} Groups" />

        <viz:VizFrame
            vizType='bar'>
            <viz:dataset>
                <viz.data:FlattenedDataset data="{groups}">
                    <viz.data:dimensions>
                        <viz.data:DimensionDefinition name="Group Name"
                            value="{name}" />  
                    </viz.data:dimensions>
                    <viz.data:measures>
                        <viz.data:MeasureDefinition name="Questions"
                            value="" />
                    </viz.data:measures>
                </viz.data:FlattenedDataset>
            </viz:dataset>

            <viz:feeds>
                <viz.feeds:FeedItem uid="valueAxis" type="Measure"
                    values="Questions" />
                <viz.feeds:FeedItem uid="categoryAxis" type="Dimension"
                    values="Group Name" />
            </viz:feeds>
        </viz:VizFrame>
    </m:FlexBox>
</core:FragmentDefinition>